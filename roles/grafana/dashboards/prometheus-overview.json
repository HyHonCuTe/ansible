{
  "dashboard": {
    "title": "Prometheus Overview",
    "tags": ["prometheus", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "id": 1,
        "title": "Total Targets",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count(up)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "id": 2,
        "title": "Targets Up",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(up == 1)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "id": 3,
        "title": "Targets Down",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(up == 0)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "id": 4,
        "title": "Prometheus Uptime",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job=\"prometheus\"}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "id": 5,
        "title": "Target Status",
        "type": "table",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "up",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              }
            }
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "id": 6,
        "title": "Scrape Duration",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "scrape_duration_seconds",
            "legendFormat": "{{job}} - {{instance}}"
          }
        ],
        "yaxes": [{"format": "s"}]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "id": 7,
        "title": "Prometheus Query Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(prometheus_http_requests_total[5m])",
            "legendFormat": "{{handler}}"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "id": 8,
        "title": "Time Series Count",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "prometheus_tsdb_head_series"
          }
        ]
      }
    ]
  }
}
