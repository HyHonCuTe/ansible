<VirtualHost *:{{ suricata_web_ui_port }}>
    ServerAdmin admin@localhost
    DocumentRoot {{ suricata_web_ui_path }}
    
    <Directory {{ suricata_web_ui_path }}>
        Options -Indexes +FollowSymLinks
        AllowOverride None
        Require all granted
        
        <FilesMatch "\.php$">
            SetHandler "proxy:unix:/run/php-fpm/www.sock|fcgi://localhost"
        </FilesMatch>
    </Directory>
    
    ErrorLog /var/log/httpd/suricata-ui-error.log
    CustomLog /var/log/httpd/suricata-ui-access.log combined
</VirtualHost>

Listen {{ suricata_web_ui_port }}
